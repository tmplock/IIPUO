
<div class="container">
    <div class="sub-wrap">
        <div class="subscr" style="background: none; border: none;">
            <div class="subtitle">
                <h1>고객센터</h1>
            </div>
            <table>
                <tr styl="background: #191919;">
                    <th style="text-align: left; height:70px; font-weight: 500; font-size:17px; padding-left: 20px;"><%=objectLetter.strSubject%></th>
                    <th style="text-align: right; padding-right: 20px;"><%=objectLetter.createdAt%></th>
                </tr>

            </table>
            <table>
                <thead>
                </thead>
                <tr>
                    <td>
                        <textarea name="comment" id="comment" style="height:200px;width:98%;text-align:left;font-weight:300; font-size:15px;" disabled><%=objectLetter.strContents%></textarea>
                    </td>
                </tr>
            </table>
            <!--  보낸 쪽지          -->
            <% if (user.strNickname != objectLetter.strTo) { %>
                <% if (objectLetter.strAnswers != undefined && objectLetter.strAnswers != '') { %>
                <table>
                    <tr style="background: #191919;">
                        <th style="text-align: left; height:40px; font-weight: 500; font-size:17px; padding-left: 20px;">관리자 답변</th>
                        <th style="text-align: right; padding-right: 20px;"><%=objectLetter.updatedAt%></th>
                    </tr>
                </table>
                <table>
                    <tr>
                        <td width="100%;">
                            <textarea name="comment" id="comment" style="height:200px;width:98%;text-align:left;font-weight:300; font-size:15px;" disabled><%=objectLetter.strAnswers%></textarea>
                        </td>
                    </tr>
                </table>
                <% } else { %>
                    <table>
                        <tr style="background: #191919;">
                            <th style="text-align: left; height:40px; font-weight: 500; font-size:17px; padding-left: 20px;">관리자 답변 대기중</th>
                        </tr>
                    </table>
                <% } %>
            <% } %>
            <div class="btn_area">
                <button type="button" onclick="location.href='/letter/listcs'">목록</button>
            </div>
        </div>

    </div>
</div>

<script>
    const objectLetter = JSON.parse('<%-JSON.stringify(objectLetter)%>');
    const user = JSON.parse('<%-JSON.stringify(user)%>');
</script>