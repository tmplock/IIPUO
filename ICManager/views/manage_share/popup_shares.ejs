                        <col style="width:23%">
                    </colgroup>
                    <thead>
                    <tr>
                        <th scope="col">본사</th>
                        <th scope="col">지분자</th>
                        <th scope="col">순이익</th>
                        <th scope="col">슬롯 알값</th>
